<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--header-->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_react01"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_before_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Settings"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_below="@id/topBar"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_person_24"
            app:c_background_color="@color/colorPrimary"
            app:c_border="true"
            app:c_border_color="#4A97E4"
            app:c_border_width="1dp"
            app:c_shadow="true"
            app:c_shadow_color="#000"
            app:c_shadow_gravity="end"
            app:c_shadow_radius="5.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/box"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="16dp"
            android:elevation="@dimen/_2sdp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/profilesetting"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon"
                android:hint="Edit Profile"
                android:textColorHint="#000000"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"
                android:inputType="text"
                android:textColor="#000000" />

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                app:tint="@color/black" />

        </RelativeLayout>

        <!-- jec recruitment header -->
        <com.github.florent37.expansionpanel.ExpansionHeader
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:background="@color/white"
            android:elevation="@dimen/_2sdp"
            app:expansion_headerIndicator="@id/headerIndicator"
            app:expansion_layout="@id/expansionLayout"
            app:expansion_toggleOnClick="true">

            <!-- HEADER -->

            <!-- HEADER INDICATOR -->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/recruitment"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="My JEC Recruitment"
                android:textColorHint="#000000"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"
                android:inputType="text"
                android:textColor="#000000"
                />
        </LinearLayout>

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/headerIndicator"
                android:layout_gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


        </com.github.florent37.expansionpanel.ExpansionHeader>

        <!--  jec recruitment body -->
        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/expansionLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <!-- CONTENT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Apply header -->
                <com.github.florent37.expansionpanel.ExpansionHeader
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="@dimen/_30sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_2sdp"
                    app:expansion_headerIndicator="@id/applyIndicator"
                    app:expansion_layout="@id/applyExpansionLayout"
                    app:expansion_toggleOnClick="true">

                    <!-- HEADER -->

                    ...
                    <!-- HEADER INDICATOR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_search_24"
                            android:tint="@color/black"
                            android:layout_gravity="center"
                            tools:ignore="UseAppTint" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Apply"
                            android:textColorHint="#000000"
                            android:layout_marginLeft="15dp"
                            android:background="#00000000"
                            android:letterSpacing="0.1"
                            android:textSize="@dimen/form_text_size"
                            android:inputType="text"
                            android:textColor="#000000"
                            />
                    </LinearLayout>

                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/applyIndicator"
                        android:layout_gravity="center_vertical|right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                </com.github.florent37.expansionpanel.ExpansionHeader>

                <!--  Apply body -->
                <com.github.florent37.expansionpanel.ExpansionLayout
                    android:id="@+id/applyExpansionLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- CONTENT -->


                </com.github.florent37.expansionpanel.ExpansionLayout>

                <!-- Hire header -->
                <com.github.florent37.expansionpanel.ExpansionHeader
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="@dimen/_30sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_2sdp"
                    app:expansion_headerIndicator="@id/hireIndicator"
                    app:expansion_layout="@id/hireExpansionLayout"
                    app:expansion_toggleOnClick="true">

                    <!-- HEADER -->

                    ...
                    <!-- HEADER INDICATOR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/candidates"
                            android:tint="@color/black"
                            android:layout_gravity="center"
                            tools:ignore="UseAppTint" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hire"
                            android:textColorHint="#000000"
                            android:layout_marginLeft="15dp"
                            android:background="#00000000"
                            android:letterSpacing="0.1"
                            android:textSize="@dimen/form_text_size"
                            android:inputType="text"
                            android:textColor="#000000"
                            />
                    </LinearLayout>

                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/hireIndicator"
                        android:layout_gravity="center_vertical|right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                </com.github.florent37.expansionpanel.ExpansionHeader>

                <!--  Hire body -->
                <com.github.florent37.expansionpanel.ExpansionLayout
                    android:id="@+id/hireExpansionLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- CONTENT -->


                </com.github.florent37.expansionpanel.ExpansionLayout>


            </LinearLayout>


        </com.github.florent37.expansionpanel.ExpansionLayout>

    </LinearLayout>

</RelativeLayout>