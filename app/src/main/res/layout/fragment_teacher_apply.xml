<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--header-->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_react01"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_before_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Apply For Teaching Jobs\n申请工作"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            />




    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">

        <!--body-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="40dp">

            <!--row1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self (本人)"
                    android:textSize="@dimen/form_text_size"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bordersimple"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="@dimen/form_field_padding" />


                <!-- agent spinnnner -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/bordersimple">

                    <Spinner
                        android:id="@+id/agentSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/agentArray"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>




            </LinearLayout>

            <!-- row2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@drawable/bordersimple">

                <Spinner
                    android:id="@+id/nationalitySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/nationalityArray"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <!-- row3 country -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@drawable/bordersimple">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ccp_showFullName="true"
                    app:ccp_showPhoneCode="false"
                    app:ccp_showNameCode="false"

                    app:ccp_textSize="@dimen/form_text_size"
                    app:ccp_textGravity="LEFT"
                    app:ccp_contentColor="@color/colorPrimary"
                    app:ccpDialog_textColor="@color/colorPrimary"/>

            </LinearLayout>

            <!-- row4 email -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Email (邮件)"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/form_text_size"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bordersimple"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/form_field_padding" />

            <!-- row5 contact -->
            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Contact Number (联系电话)"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/form_text_size"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bordersimple"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/form_field_padding" />


            <!-- row6 wechat -->
            <EditText
                android:id="@+id/weChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="WeChat (微信号)"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/form_text_size"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bordersimple"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/form_field_padding" />

            <!--row7 live selfie-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Live Selfie (自拍照)"
                    android:textSize="@dimen/form_text_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_photo_camera_24"/>

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/banner1"/>


            </LinearLayout>

            <!--row8 Upload cv-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Upload CV (上传简历)"
                    android:textSize="@dimen/form_text_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/uploadCVbtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="@drawable/roundtextbackground"
                    android:text="Upload"
                    android:textSize="@dimen/button_text_size_small"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <!--row9 Upload video-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Upload Introduction Video\n上传自我介绍视频"
                    android:textSize="@dimen/form_text_size"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/uploadVideoBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="@drawable/roundtextbackground"
                    android:text="Upload"
                    android:textSize="@dimen/button_text_size_small"
                    android:textColor="@color/white"/>


            </LinearLayout>

            <Button
                android:id="@+id/fillBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rehan_button_height"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:background="@drawable/roundtextbackground"
                android:textAllCaps="false"
                android:text="Fill The Form\n填写表格"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size"
                android:paddingHorizontal="@dimen/_15sdp"/>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>